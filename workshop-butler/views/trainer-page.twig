<div class="{{ theme }}">
    <div class="wsb-content">
        <div class="wsb-page">
            <div class="wsb-body wsb-center">
                <div class="wsb-trainer-details__header">
                    <div class="wsb-trainer__header-row">
                        [wsb_trainer_photo]
                        [wsb_trainer_name]
                        <div class="wsb-trainer-details-subtitle-container">
                            <div class="wsb-trainer__social-networks">
                                [wsb_trainer_social_link type='website']
                                [wsb_trainer_social_link type='blog']
                                [wsb_trainer_social_link type='twitter']
                                [wsb_trainer_social_link type='facebook']
                                [wsb_trainer_social_link type='linkedin']
                                [wsb_trainer_social_link type='google-plus']
                            </div>
                            [wsb_trainer_email]
                        </div>
                    </div>
                    <div class="wsb-trainer__header-row">
                        <div class="wsb-trainer-details-facts">
                            [wsb_trainer_stats type='years']
                            [wsb_trainer_stats type='events']
                            [wsb_trainer_stats type='public-rating']
                            [wsb_trainer_stats type='private-rating']
                        </div>
                    </div>
                </div>
                <div class="wsb-right-col">
                    [wsb_trainer_badges]
                    <div class="wsb-trainer-events">
                        [wsb_trainer_events]
                        [wsb_trainer_events future=false]
                    </div>
                </div>
                <div class="wsb-left-col">
                    [wsb_trainer_bio]
                    [wsb_trainer_endorsements]
                        <h3>{{ wsb_t('trainer.feedback') }}</h3>
                        <div class="wsb-trainer-details-endorsements">
                            [wsb_endorsement]
                                <div class="wsb-endorsement">
                                    [wsb_endorsement_author]
                                    [wsb_endorsement_rating]
                                    [wsb_endorsement_content]
                                </div>
                            [/wsb_trainer_endorsement]
                        </div>
                    [/wsb_trainer_endorsements]
                </div>
            </div>
        </div>
    </div>
</div>
